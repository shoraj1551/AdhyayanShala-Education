{
    "name": "shoraj-learning-platform",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w @shoraj/frontend\"",
        "build": "npm run build --workspaces --if-present",
        "test": "npm run test --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "prettier": "^3.0.0",
        "typescript": "^5.0.0"
    },
    "author": "Shoraj Tomer"
}