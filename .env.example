# ======================
# Supabase Configuration
# ======================
# Your Supabase project URL (found in project settings)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Supabase anonymous/public key (found in project settings -> API)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (optional, for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ======================
# Stripe Configuration  
# ======================
# Stripe secret key (use sk_test_... for development, sk_live_... for production)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Stripe publishable key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Stripe webhook secret (get this after creating webhook endpoint)
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ======================
# Site Configuration
# ======================
# Your application's public URL
NEXT_PUBLIC_SITE_URL=https://shorajtomer.me

# NextAuth URL (if using NextAuth)
NEXTAUTH_URL=https://shorajtomer.me

# NextAuth secret (if using NextAuth)
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# ======================
# Optional: Error Tracking
# ======================
# Sentry DSN (if using Sentry for error tracking)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# ======================
# Environment
# ======================
# Set to 'development', 'staging', or 'production'
NODE_ENV=production